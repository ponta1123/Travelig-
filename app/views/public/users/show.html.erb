<div class="container">
  <div class="row mt-3 text-success">
    <div class="col text-center">
     <h3>マイページ</h3>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-3 text-center">
      <h4 class="text-primary">ニックネーム</h4>
      <h4><%= @user.name %></h4>
    </div>
    <div class="col-lg-3 text-center">
      <h4 class="text-primary">メールアドレス</h4>
      <h4><%= @user.email %></h4>
    </div>
    <div class="col-lg-3 text-center">
      <h4 class="text-primary">所在地</h4>
      <h4><%= @user.address %></h4>
    </div>
    <div class="col-lg-3 text-center">
      <h4><%= link_to "登録情報編集する", user_information_edit_path, class: "btn btn-dark" %></h4>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col text-center">
      <h4 class="text-secondary">自分の投稿一覧</h4>
    </div>
  </div>
    <div class="row">
      <div class="col">
        <div class="card-group w-25">
          <% @users.each do |user| %>
           <div class="card border-primary mt-2 mx-lg-1">
             <%= image_tag user.image, class: "card-image-top" %>
             <div class="card-body">
               <h5 class="card-title">
                 <%= user.title %>
               </h5>
               <p class="card-text">
                 <%= user.introduction %>
               </p>
             </div>
             <ul class="list-group list-group-flush">
               <li class="list-group-item">TAG</li>
             </ul>
             <div class="card-footer">
               <small class="text-muted">フッター</small>
             </div>
           </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
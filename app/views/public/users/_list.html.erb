       <div class="col">
        <div class="card-group w-25">
          <% users.each do |user| %>
           <div class="card border-primary mt-2 mx-lg-1">
             <%= image_tag user.image, class: "card-image-top" %>
             <div class="card-body">
               <h5 class="card-title">
                 <%= user.title %>
               </h5>
               <p class="card-text">
                 <%= user.introduction %>
               </p>
             </div>
             <ul class="list-group list-group-flush">
               <li class="list-group-item">TAG</li>
             </ul>
             <div class="card-footer">
               <small class="text-muted"><%= name %></small>
             </div>
           </div>
          <% end %>
        </div>
      </div>
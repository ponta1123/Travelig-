<div class="container">
  <div class="row">
    <div class="card border-primary mt-4 w-50 mx-auto">
      <%= image_tag @post.image, class: "card-image-top" %>
      <div class="card-body">
        <h5 class="card-title">
          <%= @post.title %>
        </h5>
        <p class="card-text">
          <%= @post.introduction %>
        </p>
        <ul class="list-group list-group-flush">
          <% @post_tags.each do |tag| %>
          <li class="list-group-item"><%= link_to tag.name, search_tag_path(tag_id: tag.id) %></li>
          <% end %>
        </ul>
        <div class="card-footer">
          <h5 class="text-muted"><%= @post.user.name %>
          <%= link_to "投稿削除", post_path(@post.id), method: :delete, class: "btn btn-danger offset-7" %>
          </h5>
        </div>
      </div>
    </div>
  </div>
</div>
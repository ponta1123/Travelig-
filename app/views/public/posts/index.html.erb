  <div class="container">
    <div class="row mt-4">
      <div class="col text-center">
        <h3 class="text-secondary">みんなの投稿</h3>
        <div class="search-form">
         <%= form_with url: search_path, method: :get, local: true do |f| %>
         <%= f.text_field :keyword, value: @keyword, placeholder: "タイトルを入力して検索" %>
         <%= f.submit "検索" %>
         <% end %>
       </div>
      </div>
    </div>
    <%= render 'list', posts: @posts, tag_list: @tag_list %>
  </div>


  <div class="container">
    <div class="row mt-4">
      <div class="col text-center">
        <h3 class="text-secondary">みんなの投稿</h3>
      </div>
    </div>
      <div class="row row-cols-3 row-cols-md-4 g-4">
        <% @posts.each do |post| %>
          <div class="col my-3">
            <div class="card rounded border-primary h-100">
              <%= image_tag post.image, class: "card-image-top" %>
              <div class="card-body">
                <h5 class="card-title">
                 <%= link_to post.title, post_path(post.id) %>
                </h5>
                <p class="card-text">
                 <%= post.introduction %>
                </p>
              </div>
              <ul class="list-group list-group-flush">
               <li class="list-group-item">TAG</li>
              </ul>
              <div class="card-footer">
               <small class="text-muted"><%= link_to post.user.name, user_my_page_path %></small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>


<div class="container-md">
  <div class="row text-center">
    <h2>新規登録</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row mt-3">
    <%= f.label :"メールアドレス", class: "h5 col-6 text-secondary" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="row mt-3">
    <%= f.label "登録名", class: "h5 col-6 text-secondary" %>
    <%= f.text_field :name %>
  </div>
  <div class="row mt-3">
    <%= f.label "所在地", class: "h5 col-6 text-secondary" %>
    <%= f.text_field :address %>
  </div>
  <div class="row mt-3">
    <%= f.label :"パスワード", class: "h5 col-6 text-secondary" %>

    <%= f.password_field :password, placeholder: "6文字以上" %>
  </div>
  <div class="row mt-3">
    <%= f.label :"パスワード(確認用)", class: "h5 col-6 text-secondary" %><br />
    <%= f.password_field :password_confirmation, placeholder: "6文字以上" %>
  </div>
  <div class="row mt-3 offset-5">
    <%= f.submit "Sign up" %>
  </div>
  <% end %>
</div>


<%= render "public/shared/links" %>

<div class="container">
  <div class="row text-success mt-2 offset-4">
    <h4>会員一覧</h4>
  </div>
  <div class="row mt-4 offset-3">
    <table border  width="50%" height="50%">
     <tr>
       <th>投稿者</th>
       <th>投稿件数</th>
       <th>登録日</th>
     </tr>
     <% @users.each do |user| %>
     <tr>
       <td><%= link_to user.name, admin_user_path(user.id) %></td>
       <td><%= user.posts.count %></td>
       <td><%= user.created_at.strftime('%Y/%m/%d/ %H:%M') %></td>
     </tr>
     <% end %>
    </table>
  </div>
</div>
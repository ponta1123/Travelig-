<div class="container">
  <div class="row mt-4">
    <div class="badge bg-light">
      <h4><%= @user.name %>さんの会員情報編集</h4>
    </div>
  </div>
  <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
  <div class="row mt-2">
    <%= f.label :会員ID, class: " h5 col-3" %>
    <%= @user.id %>
  </div>
  <div class="row mt-2">
    <%= f.label :登録名, class: " h5 col-3" %>
    <%= f.text_field :name %>
  </div>
  <div class="row mt-2">
    <%= f.label :メールアドレス, class: "h5 col-3" %>
    <%= f.text_field :email %>
  </div>
  <div class="row mt-2">
    <%= f.label :所在地, class: "h5 col-3" %>
    <%= f.text_field :address %>
  </div>
  <%= f.submit '変更を保存', class: "col-2 mt-3 offset-3 btn btn-success" %>
  <% end %>
</div>